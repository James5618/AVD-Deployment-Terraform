# ============================================================================
# AVD QUICKSTART - Configuration Template
# ============================================================================
# QUICK START:
# 1. Copy this file to terraform.tfvars
# 2. Edit the values below (especially passwords and user emails)
# 3. Run: terraform init && terraform plan && terraform apply
#
# IMPORTANT: Never commit terraform.tfvars to version control!
# ============================================================================

# ─────────────────────────────────────────────────────────────────────────────
# DOMAIN CREDENTIALS
# ─────────────────────────────────────────────────────────────────────────────
# Change these passwords! Must meet Windows complexity requirements:
# - At least 12 characters
# - Uppercase, lowercase, number, special character

domain_admin_username = "avdadmin"
domain_admin_password = "YourSecurePassword123!"  # CHANGE THIS!

# ─────────────────────────────────────────────────────────────────────────────
# AVD USERS
# ─────────────────────────────────────────────────────────────────────────────
# List user UPNs who should have access to AVD
# Users must exist in your Entra ID tenant

avd_users = [
  "user1@yourdomain.com",
  "user2@yourdomain.com"
]

